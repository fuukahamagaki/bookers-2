<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class="col-md-3">
    <%= render 'books/list', book: @book,user: @user %>
  </div>
   <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
   <tbody>
      <% @books.each do |book| %>
     <tr>
       <td><%= image_tag book.user.profile_image%></td>
      <td><a><%=book.user.name%></a></td>
      <td><%= link_to "Show", user_path(book.user.id) %></td>


      <%end%>
   </tbody>
  </table>
  </div>
 </div>
</div>

<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'list', book: @book,user: @user %>
   </div>
   <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <thead>

       </thead>
      <tbody>

         <tr>
          <td><%= image_tag @user.profile_image %><br>
           <%= link_to @user.name,user_path(@user.id) %></td>
          <td><%= link_to @books.title, book_path %></td>
          <td><%=@books.body%></td>
          <% if current_user.id == @user.id %>
          <td><%= link_to "Edit",edit_book_path, class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy",book_path(@books.id), class: "btn btn-sm btn-danger", method: :delete,"data-confirm"=>"本当に消しますか？" %></td>
          <% end %>



       </tbody>
     </table>
   </div>
 </div>
</div>


